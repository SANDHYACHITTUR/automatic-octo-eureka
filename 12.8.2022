#include<stdio.h>
int main()
{
	int n,i,j;
	printf("enter n value");
	scanf("%d",&n);
	for(i=1;i<=5;i++)
	{
		for(j=1;j<=i;j++)
		{
			printf("*\t");
		}
		printf("\n");
	}
	for(i=n-1;i>0;i--)
	{
		for(j=1;j<=i;j++)
		{
			printf("*\t");
		}
		printf("\n");
	}
	return 0;
}
